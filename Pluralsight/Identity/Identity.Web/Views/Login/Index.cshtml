@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1 class="display-3">Log In or Sign Up</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="Login" asp-action="Login">
        <table>
            <tr>
                <td>First Name: </td>
                <td><input type="text" id="txtFirstName"></td>
            </tr>
            <tr>
                <td>Last Name: </td>
                <td><input type="text" id="txtLastName"></td>
            </tr>
            <tr>
                <td>Email: </td>
                <td><input type="email" id="txtEmail"></td>
            </tr>
            <tr>
                <td>Password: </td>
                <td><input type="password" id="txtPassword"></td>
            </tr>
            <tr>
                <td>Favorite Movie: </td>
                <td><input type="text" id="txtFavoriteMovie"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="submit"></td>
            </tr>
        </table>
    </form>
</div>